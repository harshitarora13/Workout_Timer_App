<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BlackLite"
    android:padding="20dp"
    tools:context=".MainActivity">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Time To Workout"
       android:textColor="@color/Yellow"
       android:textSize="24sp"
       android:layout_marginTop="10dp"
       android:fontFamily="@font/poppins_medium"
       android:layout_gravity="center_horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:background="@color/DarkGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration (min):"
                android:textColor="@color/Yellow"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:layout_margin="5dp"
                android:inputType="number"
                android:fontFamily="@font/poppins_medium"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Enter Duration"
                android:textColorHint="@color/LiteGray"
                android:textSize="14sp"
                android:inputType="number"
                android:id="@+id/edtTimeDuration"
                android:textColor="@color/white"
                android:background="@drawable/bg_edit_text"
                android:paddingLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sets:"
                android:textColor="@color/Yellow"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/poppins_medium"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Enter sets"
                android:id="@+id/etSet"
                android:inputType="number"
                android:textColorHint="@color/LiteGray"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:background="@drawable/bg_edit_text"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rest (sec):"
            android:textColor="@color/Yellow"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/poppins_medium"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Enter Rest"
            android:id="@+id/etRest"
            android:inputType="number"
            android:textColorHint="@color/LiteGray"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:background="@drawable/bg_edit_text"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/poppins"/>
        </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/Yellow"
        android:text="Start"
        android:textSize="16sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black" />

</RelativeLayout>



</LinearLayout>
