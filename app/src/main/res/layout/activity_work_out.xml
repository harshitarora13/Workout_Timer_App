<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/BlackLite"
    tools:context=".ActivityWorkOut">
    <TextView
        android:id="@+id/tvSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="sets"
        android:textColor="@color/Yellow"
        android:textSize="24sp" />


    <ProgressBar
        android:id="@+id/pro_bar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tvSets"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle_probar"
        tools:progress="60" />

    <TextView
        android:id="@+id/txt_remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="00:20"
        android:textColor="@color/Yellow"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining Time"
        android:textColor="@color/Yellow"
        android:textSize="12sp"
        android:layout_below="@id/txt_remaining_time"
        android:fontFamily="@font/poppins_semibold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WorkOut is Completed"
        android:visibility="gone"
        android:id="@+id/tvCompleted"
        android:textColor="@color/Yellow"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="170dp"
        android:layout_below="@id/txt_remaining_time"
        android:fontFamily="@font/poppins_semibold"
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStartPause"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/Red"
            android:layout_margin="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Stop"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>